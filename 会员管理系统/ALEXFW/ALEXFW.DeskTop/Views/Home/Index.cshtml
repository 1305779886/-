@model  IEnumerable<ALEXFW.Entity.UserAndRole.Department>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        
        @foreach (var item in Model)
        {
            <div class="card col-sm-4 col-xs-4 ">
                <a href="" style="color: #000;text-decoration:none;">
                    <div style="margin: 10px 0;">
                        <div>
                            @if (item.Logo == null)
                            {
                                <img style="height:220px" class="img-responsive img-rounded" src="~/WebUploadFile/Image/timg.jpg">
                                @*<img style="height:220px" class="img-responsive img-rounded" src="~/WebUploadFile/Image/timg (1).jpg">*@

                            }
                            else
                            {
                                <img style="height:220px" class="img-responsive img-rounded" src="@item.Logo" />
                            }
                        </div>
                        <h4>@item.DepartmentName</h4>
                        <p style="margin-bottom: 0px;font-size: 14px;color: #999;">地址：@item.Adress</p>
                        <p style="margin-bottom: 0px;font-size: 14px;color: #999;">电话：@item.Tel</p>
                        <p style="margin-bottom: 0px;font-size: 14px;color: #999;">营业时间：@item.Times</p>                
                    </div>
                </a>
            </div>
        }
    </div>
</div>
        
<script>
        $(document).ready(function () {
            $(".card").hover(
                function () {
                    $(this).css("background-color", "#eee");
                },
                function () {
                    $(this).css("background-color", "#fff");
                }
            );
        });
</script>
