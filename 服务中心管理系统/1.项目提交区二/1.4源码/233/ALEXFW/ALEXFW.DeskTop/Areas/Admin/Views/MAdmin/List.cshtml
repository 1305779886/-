@model EntityViewModel<ALEXFW.Entity.UserAndRole.Admin>
@{
    ViewBag.Title = "队伍管理人员列表";

    var area = ViewContext.RouteData.DataTokens["Area"];
    if (area == null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Areas/" + area + "/Views/Shared/_adminLayout.cshtml";
    }

    var nameOrCode = ViewBag.NameOrCode;
    string partialViewPath = ViewBag.PartialViewPath;
}

<ol class="breadcrumb">
    <li>
        <a href="@Html.Raw(Url.Action("Index", "Home"))">工作桌面</a>
    </li>
    <li class="active">队伍管理人员列表</li>
</ol>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">

            <!-- Default panel contents -->
            <div class="panel-heading">
                &nbsp;
                @*<a href="@Html.Raw(Url.Action("Create"))" class="btn btn-primary pull-right" style="margin-left: 10px; margin-top: -7px;">新增员工</a>*@
                <a onclick="javascript: query();" class="btn btn-success pull-right" style="margin-left: 10px; margin-top: -7px;">查询</a>
                <input class="pull-right form-control" type="text" id="nameOrPhone" placeholder="工号或登录名" value="@nameOrCode" style="margin-left: 10px; margin-top: -7px; width: 20%;" />


            </div>
            <!-- Table -->
            @Html.Partial(partialViewPath, Model)
        </div>

    </div>
</div>